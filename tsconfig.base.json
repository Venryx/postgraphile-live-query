{
	"compilerOptions": {
		// general
		"watch": true,
		//"noEmit": true,
		//"sourceMap": true,
		"declaration": true,
		"forceConsistentCasingInFileNames": true, // creates duplicates in import-helper plugins otherwise

		// modules/paths
		"module": "esnext",
		"moduleResolution": "node",

		// compiler options
		"target": "esnext",
		"noImplicitAny": false,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true
	}
}